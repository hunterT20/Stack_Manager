<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CancelButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/mdtp_transparent_black</item>
        <item name="colorButtonNormal">@color/Material_Red</item>
    </style>

    <style name="SaveButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/mdtp_transparent_black</item>
        <item name="colorButtonNormal">@color/Material_Green</item>
    </style>

    <style name="style_EditText" parent="Theme.AppCompat">
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:background">@android:drawable/screen_background_dark_transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/background_light</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
